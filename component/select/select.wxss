/* component/select/select.wxss */
.com-selectBox{
    position: relative;
    float: left;
    height: 50rpx; 
    border-bottom: 1px solid #e9e9e9;
    /* border: 1px solid #3f3e3e; */
    border-radius: 6rpx;
}

.com-sContent{
    background: white;
    font-size: 32rpx;
    position: relative;
    height: 46rpx;
    line-height: 46rpx;
    margin-left: 5rpx;
}

.com-sTxt{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top:0rpx;
    padding:0 0rpx 0 0rpx;
    font-size: 32rpx;
    position: relative;
    float: left;
    /*20200714 lxw change start*/
    width: 65rpx
    /*20200714 lxw change end*/
}

.com-sImg{
    position: relative;
    width: 22rpx;
    height: 22rpx;
    transition: all .3s ease;
    margin-top: 12rpx;
    margin-left: 12rpx;
    margin-right: 12rpx;
    position: relative;
    float: left;
}


.com-sList{
    background: white;
    position: absolute;
    border: 1rpx solid #e2e2e2;
    border-top: none;
    box-sizing: border-box;
    z-index: 3;
    /*20200714 lxw change start*/
     /* max-height: 100rpx; */
     max-height: 200rpx;
    /*20200714 lxw change end*/
     margin-top:25rpx;
    overflow: auto;
    margin-left: 0rpx;
}

.com-sItem{
    /*20200714 lxw change start*/
    /* height: 50rpx;
    line-height: 50rpx; */
    height: 80rpx;
    line-height: 80rpx;
    /*20200714 lxw change end*/
    border-top: 1rpx solid #b1acac;
    padding: 0 6px;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
}

.com-sItem:first-child{
    border-top: none;
}