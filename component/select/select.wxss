/* component/select/select.wxss */
.com-selectBox{
    width: 90px;
    float: right;
    /* margin-right: 300rpx; */
    margin-top: 15rpx;

    /* border: rgb(30, 38, 153) solid 1px; */
}
.com-sContent{
    /* border: 1px solid #be154d; */
    background: white;
    font-size: 16px;
    position: relative;
    height: 30px;
    line-height: 30px;
     /* 20200321 start */
     /* margin-left: 20px; */
    margin-left: 0rpx;
    /* 20200321 end */
}

.com-sTxt{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    /* padding:0 20px 0 6px; */
    padding:0 0px 0 0px;
    /* 20200321 start */
    /* font-size: 14px; */
    font-size: 16px;
    /* 20200321 end */
   /* border: rgb(26, 58, 201) solid 1px; */
}

.com-sImg{
    position: absolute;
    right: 10px;
    top: 11px;
    width: 10px;
    height: 10px;
    transition: all .3s ease;


    /* border: rgba(39, 39, 39, 0.342) solid 1px; */
}

.com-sList{
    background: white;
    /* width: inherit; */
    width: 150rpx;
    position: absolute;
    border: 1px solid #e2e2e2;
    border-top: none;
    box-sizing: border-box;
    z-index: 3;
    /* 20200321 start */
    /* max-height: 60px; */
     max-height: 70px;
     /* 20200321 end */
    overflow: auto;
    /* margin-left: 20rpx; */
    margin-left: 0rpx;
    
}
.com-sItem{
    height: 30px;
    line-height: 30px;
    border-top: 1px solid #b1acac;
    padding: 0 6px;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
}

.com-sItem:first-child{
    border-top: none;
}