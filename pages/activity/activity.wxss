/* pages/community/bbs/bbs-home/bbs-home.wxss */

@import "../community/hot-topic/topic-home/topic-home.wxss";
.community-bbs-more image{
  width: 28rpx;
  height: 28rpx;
}
scroll-view{
  overflow: hidden;
  height: 400rpx;
}
.sub-swiper{
  height: 380rpx;
  margin: 30rpx 0;
  width:100%; 
  display: flex; 
  display: -webkit-box; 
  flex-direction: column;
  margin-left: 24rpx;
  position: relative;
} 
.sub-list-wrap{
  width: 444rpx;
  height: 274rpx;
  position: relative;
  flex: 1;
  margin-right: 24rpx;
  border-radius: 8rpx;
  box-shadow: 4rpx 4rpx 10rpx rgba(234, 233, 233, 0.75);
  border: 2rpx solid #e9e9e9;
  padding: 30rpx 24rpx;
}
.sub-list-name{
  color: #19c910;
}
.sub-list-name text{
  color: #000;
}
.sub-list-picList{
  margin: 20rpx 0;
}
.sub-list-picList image{
  width: 146rpx;
  height: 146rpx;
}
.sub-list-picList image:nth-child(2){
  margin: 0 3rpx;
}
.sub-list-number{
  color: #999999;
}
.sub-list-join-btn{
  float: right;
  width: 138rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  color: #19c910;
  border: 2rpx solid #19c910;
  border-radius: 12rpx;
}
