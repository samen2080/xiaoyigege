/* pages/community/community.wxss */

@import "../index/index.wxss";
@import "../mine/mine-subject/mine-subject.wxss";

.community-banner{
  margin-top: 86rpx;
  padding: 24rpx 0 48rpx;
  position: relative;
}
.community-banner-swiper{
  text-align: center;
  width: 702rpx;
  position: relative;
  height: 326rpx;
  margin: 0 auto;
  border-radius: 12rpx;
  overflow: hidden;
}
.community-banner-swiper swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  overflow: hidden;
}
.community-banner .dots{
  position: absolute;
  right: 24rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.community-banner .dots .dot{
  margin: 0 4rpx;
  width: 14rpx;
  height: 14rpx;
  background: #999999;
  border-radius: 50%;
  transition: all .5s;
}
.community-banner .dots .dot.active{
  width: 48rpx;
  border-radius: 8rpx;
  background: #19c810;
}


/* 热门话题 */
.community-hot-topic{
  background: #ffffff;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.community-hot-topic-title{
  text-align: center;
  color: #19c810;
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e9e9e9;
}
.community-hot-topic-title text{
  color: #000;
  margin: 0 14rpx;
}
.community-hot-topic-list{
  width: 50%;
  float: left;
  margin: 16rpx 0;
}
.community-hot-topic-list:nth-child(2),.community-hot-topic-list:nth-child(3){
  margin-top: 24rpx;
}
.community-hot-topic-list:nth-child(4),.community-hot-topic-list:nth-child(5){
  margin-bottom: 24rpx;
}
.community-hot-topic-list image{
  width: 44rpx;
  height: 44rpx;
  vertical-align: text-bottom;
  margin-right: 24rpx;
}
.community-hot-topic-list:nth-child(2) image,.community-hot-topic-list:nth-child(4) image{
  margin-left: 24rpx;
}


/* 论坛 */
.community-bbs-title{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #e9e9e9;
  font-size: 32rpx;
  font-weight: bold;
  background: #ffffff;
}
.community-bbs-title image{
  width: 44rpx;
  height: 44rpx;
  vertical-align: text-bottom;
  margin-right: 14rpx;
}
.community-bbs-more{
  float: right;
  font-size: 26rpx;
  color: #999999;
  font-weight: 500;
}
.community-bbs-more image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
  margin-right: 0;
  margin-bottom: 2rpx;
}
.community-bbs{
  margin-bottom: 24rpx;
}
.community-bbs-list-wrap{
  background: #ffffff;
  overflow: hidden;
}
.community-bbs-list{
  background: #ffffff;
  position: relative;
  height: 148rpx;
  overflow: hidden;
}
.community-bbs-tx-wrap{
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-top: 24rpx;
  margin-left: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.community-bbs-tx-wrap image{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 12rpx;
  overflow: hidden;
}
.community-bbs-name{
  position: absolute;
  top: 30rpx;
  left: 148rpx;
  font-size: 32rpx;
}
.community-bbs-instru{
  position: absolute;
  bottom: 30rpx;
  left: 148rpx;
  font-size: 26rpx;
  color: #999999;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.community-bbs-attention{
  font-size: 26rpx;
  color: #19c810;
  border: 1px solid #19c810;
  border-radius: 12rpx;
  width: 116rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.focus{
  color: #999;
  border: 1px solid #999;
}



/* 帖子 */
.community-post-title{
  background: #ffffff;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #e9e9e9;
  font-size: 32rpx;
  overflow: hidden;
  color: #999999;
}
.community-post-title view:first-child{
  float: left;
}
.community-post-title view:nth-child(2){
  float: right;
}
.community-post-title view image{
  width: 22rpx;
  height: 11rpx;
  margin-left: 20rpx;
}