/* pages/community/hot-topic/hot-topic.wxss */
page{
  background: #ffffff;
}

.hot-topic-list{
  width: 100%;
  height: 174rpx;
  margin-top: 24rpx;
}
.hot-topic-list .wrap{
  position: relative;
  overflow: hidden;
}
.hot-topic-list .wrap image{
  width: 174rpx;
  height: 174rpx;
}
.hot-topic-list-bq{
  width: 60rpx;
  height: 32rpx;
  line-height: 32rpx;
  position: absolute;
  top: 0;
  left: 0;
  color: #ffffff;
  text-align: center;
  border-radius: 0 0 12rpx 0;
}
.hot-topic-list:first-child .hot-topic-list-bq{
  background: #19c810;
}
.hot-topic-list:nth-child(2) .hot-topic-list-bq{
  background: #ff721c;
}
.hot-topic-list:nth-child(3) .hot-topic-list-bq{
  background: #117ffb;
}
.hot-topic-list-title{
  position: absolute;
  top: 0;
  left: 198rpx;
  font-size: 32rpx;
}
.hot-topic-list:first-child .hot-topic-list-title{
  color: #19c810;
}
.hot-topic-list:nth-child(2) .hot-topic-list-title{
  color: #ff721c;
}
.hot-topic-list:nth-child(3) .hot-topic-list-title{
  color: #117ffb;
}

.hot-topic-list-intro{
  color: #999999;
  font-size: 26rpx;
  position: absolute;
  top: 50%;
  left: 198rpx;
  transform: translateY(-50%);  
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden;
  text-overflow:ellipsis;

}
.hot-topic-list-info{
  font-size: 26rpx;
  position: absolute;
  bottom: 6rpx;
  left: 198rpx;
}
.hot-topic-list-info text:first-child{
  margin-right: 24rpx;
}