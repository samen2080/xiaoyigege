/* pages/community/hot-topic/topic-member/topic-member.wxss */
.title{
  height: 60rpx;
  line-height: 60rpx;
  color: #999999;
  padding: 0 24rpx;
  border-top: 2rpx solid #e9e9e9;
  border-bottom: 2rpx solid #e9e9e9;
}
.source-wrap{
  height: 154rpx;
  line-height: 154rpx;
  font-size: 32rpx;
  position: relative;
  background: #ffffff;
}
.source-wrap image{
  width: 96rpx;
  height: 96rpx;
  margin: 29rpx 30rpx 29rpx 24rpx;
  border-radius: 50%;
  overflow: hidden;
}
.source-wrap text{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.member-wrap{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  position: relative;
  background: #ffffff;
  border-bottom: 2rpx solid #e9e9e9;
}
.member-wrap:last-child{
  border-bottom: none;
}
.member-wrap image{
  width: 68rpx;
  height: 68rpx;
  margin: 16rpx 30rpx 16rpx 24rpx;
  border-radius: 50%;
  overflow: hidden;
}
.member-wrap text{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}