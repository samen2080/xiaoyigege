/* pages/community/hot-topic/topic-show/topic-show.wxss */
@import "../../community.wxss";


.fans-bq{
  font-size: 26rpx;
  color: #19c810;
  border: 1px solid #19c810;
  border-radius: 12rpx;
  width: 116rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.focus{
  color: #999;
  border: 1px solid #999;
}
.topic-show-comment{
  background: #ffffff;
  margin-top: 24rpx;
}
.topic-show-comment-title{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #e9e9e9;
}
.topic-show-comment-list-wrap{
  padding: 40rpx 0 0;
}
.topic-show-comment-list-wrap .wrap{
  position: relative;
}
.topic-show-comment-list-tx{
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
}
.topic-show-comment-list-name{
  font-size: 32rpx;
  font-weight: bold;
  position: absolute;
  top: -6rpx;
  left: 90rpx;
}
.topic-show-comment-list-time{
  font-size: 26rpx;
  color: #999999;
  position: absolute;
  top: 36rpx;
  left: 90rpx;
}
.topic-show-comment-list-like{
  position: absolute;
  top: 0;
  right: 0;
  color: #999999;
}
.topic-show-comment-list-like image{
  width: 34rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.topic-show-comment-list-pl{
  position: absolute;
  top: 4rpx;
  right: 0;
  color: #999999;
}
.topic-show-comment-list-pl image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: text-bottom;
  margin-right: 10rpx;
}
.topic-show-comment-list-content{
  font-size: 32rpx;
  line-height: 48rpx;
  margin-top: 24rpx;
  padding-left: 90rpx;
}

.line{
  width: 702rpx;
  height: 2rpx;
  margin: 40rpx auto 0;
  background: #e9e9e9;
}

.topic-show-bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #ffffff;
  height: 116rpx;
  line-height: 116rpx;
  border-top: 2rpx solid #e9e9e9;
}
.topic-show-share{
  width: 107rpx;
  height: 54rpx;
  margin-top: 31rpx;
  padding: 0 24rpx;
  border-right: 2rpx solid #e9e9e9;
  display: inline-block;
}
.topic-show-share image{
  width: 59rpx;
  height: 100%;
  vertical-align: top;
}
.topic-show-bottom input{
  width: 450rpx;
  height: 64rpx;
  line-height: 64rpx;
  display: inline-block;
  background: #f5f5f5;
  margin-left: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  padding: 0 24rpx;
  vertical-align: text-bottom;
}
.topic-show-bottom-btn{
  font-size: 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  float: right;
  margin: 26rpx 34rpx 0 0;
}

/* 付费 */
.removeModal{
  background: rgba(0, 0, 0, 0.8);
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.removeModal-box{
  width: 600rpx;
  height: 420rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 36rpx;
  text-align: center;
  overflow: hidden;
}
.removeModal-title{
  height: 318rpx;
  overflow: hidden;
}
.removeModal-title text{
  display: block;
  margin: 100rpx 0 24rpx;
}
.removeModal-title2{
  color: #999999;
  font-size: 28rpx;
}
.removeModal-cancel,.removeModal-sure{
  float: left;
  width: 50%;
  height: 102rpx;
  line-height: 102rpx;
}
.removeModal-cancel{
  background: #e9e9e9;
}
.removeModal-sure{
  background: #19c810;
  color: #FFFFFF;
}
