/* pages/index/activity/activity-show/activity-show.wxss */
.swiperContainer{
    position: relative;
}
.activity-show-top swiper{
  height: 440rpx;
}
.activity-show-top swiper image{
  width: 100%;
  height: 100%;
}
.imageCount{
  width: 106rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 8rpx;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 32rpx;
  position: absolute;
  right: 24rpx;
  bottom:20rpx;
}
.activity-show-info{
  background: #ffffff;
  padding: 24rpx 0 30rpx;
}
.activity-show-info .wrap{
  position: relative;
}
.activity-show-name{
  margin-bottom: 24rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.activity-show-time image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: text-bottom;
  margin-right: 16rpx;
}
.activity-show-time{
  color: #999999;
}





.activity-show-middle{
  margin-top: 24rpx;
  background: #ffffff;
  font-size: 32rpx;
  color: #444444;
}
.activity-show-title-box{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom:2rpx solid #e9e9e9;
  padding-left: 24rpx;
  color: #000;
}
.activity-show-info-box{
  padding: 28rpx 24rpx;
}
.activity-show-info-list{
  margin: 14rpx 0;
}
.activity-show-content-box{
  padding: 0 24rpx 70rpx;
}
.activity-show-content-list{
  line-height: 56rpx;
}