page{
  background-color: rgb(232, 232, 232);
}

.swiper-tab{
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  color:rgb(216, 216, 216);
  background-color: #FFFFFF;
  border-top: 1px solid #e9e9e9;
  border-bottom: 1px solid #e9e9e9;
}

.swiper-tab-item{
  width: 25%; 
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
}

.swiper-tab-item:first-child{  
  margin-left: 20%;
}

.swiper-tab-item:nth-child(2){
  margin-right: 20%;
}

.active{
  color:#f4673d
}

.identity-info{
  position: relative;
  float: left;
  margin-bottom: 5rpx;
  margin-left: 5rpx;
  width: 98%;
  height: 60rpx;
  background-color: white;
  border-radius: 6rpx;
}

