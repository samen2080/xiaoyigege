/* 内容精选 */
.index-contentChoiceness-list{
  width: 100%;
  background: #ffffff;
  margin-bottom: 24rpx;
  padding-top: 30rpx;
}
.index-contentChoiceness-list:last-child{
  margin-bottom: 0;
}
.index-contentChoiceness-head-box{
  width: 100%;
  position: relative;
  overflow: hidden;
}
.index-contentChoiceness-tx{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
}
.index-contentChoiceness-name{
  width: 530rpx;
  font-size: 36rpx;
  position: absolute;
  top: 0;
  left: 96rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden;
  text-overflow:ellipsis;
}
.index-contentChoiceness-time{
  font-size: 26rpx;
  color: #999999;
  position: absolute;
  bottom: 0;
  left: 96rpx;
}
.arrow-d{
  width: 22rpx;
  height: 11rpx;
  position: absolute;
  top: 25%;
  right: 0;
}
.index-contentChoiceness-content-box-1{
  width: 448rpx;
  float: left;
  margin: 24rpx 0;
  font-size: 32rpx;
  line-height: 48rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}
.index-contentChoiceness-content-box{
  width: 100%;
  margin: 24rpx 0;
  font-size: 32rpx;
  line-height: 48rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}
.index-contentChoiceness-cate-name{
  color: #19c810;
}
.index-contentChoiceness-content{
  margin-left: 10rpx;
  text-align: justify;
}

.index-contentChoiceness-img-list-1{
  overflow: hidden;
  margin: 24rpx 0;
}
.index-contentChoiceness-img-list-1 image{
  width: 228rpx;
  height: 228rpx;
  vertical-align: middle;
  float: right;
  margin-bottom: 9rpx;
}
.index-contentChoiceness-img-list{
  overflow: hidden;
  margin-bottom: 24rpx;
}
.index-contentChoiceness-img-list image{
  width: 228rpx;
  height: 228rpx;
  vertical-align: middle;
  float: left;
  margin-bottom: 9rpx;
}
.index-contentChoiceness-img-list image:nth-child(2),.index-contentChoiceness-img-list image:nth-child(5),.index-contentChoiceness-img-list image:nth-child(8){
  margin: 0 9rpx 9rpx;
}
.index-contentChoiceness-img-list-4{
  overflow: hidden;
  margin-bottom: 24rpx;
}
.index-contentChoiceness-img-list-4 image{
  width: 228rpx;
  height: 228rpx;
  vertical-align: middle;
  float: left;
  margin-bottom: 9rpx;
}
.index-contentChoiceness-img-list-4 image:nth-child(2),.index-contentChoiceness-img-list-4 image:nth-child(4){
  margin: 0 10rpx 9rpx;
}

.index-contentChoiceness-info{
  width: 100%;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.index-contentChoiceness-info-1{
