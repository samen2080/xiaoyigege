/* 搜索框 */
.index-search-box{
  width: 100%;
  position: fixed;
  top: 0;
  background: #ffffff;
  height: 86rpx;
  z-index: 999;
  /* border-bottom: 2rpx solid #e9e9e9; */
}
.index-search{
  height: 58rpx;
  background: #e9e9e9;
  border-radius: 29rpx;
  margin-top: 14rpx;
}
.index-search image{
  width: 34rpx;
  height: 34rpx;
  margin: 12rpx 24rpx;
}
.index-search input{
  width: 600rpx;
  height: 58rpx;
  line-height: 58rpx;
  float: right;
  margin-right: 20rpx;
}
.search-placeholder{
  color: #999999;
}

/* banner */
.banner{
  margin-top: 88rpx;
  background-color: #ffffff;
}
.banner-swiper{
  text-align: center;
  width: 750rpx;
  /* margin-left: 10rpx; */
  position: relative;
  height: 356rpx;
}
.banner-img{
  width: 730rpx;
  height: 316rpx;
   /* width: 100%;
