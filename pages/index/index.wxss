}

.index-list-box{
  width: 730rpx;
  /* margin-top: 20rpx; */
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
  margin-left: 10rpx;
  border-radius: 5rpx;
}

.index-list-title{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #e9e9e9;
  font-size: 36rpx;
  font-weight: bold;
  background: #ffffff;
  /* border-width: 2rpx 2rpx 2rpx 2rpx ;
