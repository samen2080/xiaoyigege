  width: 41rpx;
  height: 27rpx;
  margin-right: 14rpx;
}
.index-contentChoiceness-like image{
  width: 34rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.index-contentChoiceness-comment image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
  vertical-align: middle;
  margin-bottom: 2rpx;
}


/* 热门推荐 */
.index-recommend-list{
  width: 374rpx;
  float: left;
  height: 180rpx;
  line-height: 180rpx;
  background: #ffffff;
  border-bottom: 2rpx solid #e9e9e9;
  border-right: 2rpx solid #e9e9e9;
  font-size: 32rpx;
}
.index-recommend-list:nth-child(3),.index-recommend-list:nth-child(5),.index-recommend-list:nth-child(7){
  border-right: none;
}
.index-recommend-list:nth-child(6),.index-recommend-list:nth-child(7){
  border-bottom: none;
}
.index-recommend-list image{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-left: 54rpx;
}
.index-recommend-list text{
  margin-left: 24rpx;
}


/* 品牌广告 */
.index-ad-list-box{
  width: 730rpx;
  background: #ffffff;
  padding: 24rpx 0;
}
.index-ad-list-box .wrap{
  overflow: hidden;
}
.index-ad-list{
  width: 164rpx;
  height: 226rpx;
  border-radius: 10rpx;
  float: left;
  overflow: hidden;
  /* border: 2rpx solid #e9e9e9; */
  margin-right: 10rpx;
  text-align: center;
}
.index-ad-list:last-child{
  margin-right: 0;
}
.index-ad-list-logo-box{
  width: 100%;
  height: 156rpx;
  line-height: 154rpx;
  /* border-bottom: 2rpx solid #e9e9e9; */
  position: relative;
}
.index-ad-list-logo-box image{
  max-width: 75%;
  max-height: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.index-ad-list-name-box{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color:  #eed8c1;
  background: #3e4468;
  border-radius: 5rpx;
  
}

/* 大师入驻 */
.index-master-swiper{
  text-align: center;
  width: 750rpx;
  position: relative;
  height: 410rpx;
}
.index-master-list-box{
  background: #ffffff;
  overflow: hidden;
  position: relative;
}
.index-master-list{
  width: 234rpx;
  height: 100%;
  float: left;
  text-align: center;
}
.index-master-list-logo-box{
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 33rpx;
  box-shadow: 6rpx 6rpx 6rpx rgba(209, 209, 209, 0.75);
  position: relative;
  margin-top: 22rpx;
  margin-bottom: 30rpx;
}
.index-master-list-logo-box image{
  width: 158rpx;
  height: 158rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.index-master-list-name-box{
  font-size: 32rpx;
}
.index-master-list-Instruments-box{
  color: #999999;
  font-size: 26rpx;
  margin: 24rpx 0 38rpx;
}

.index-master-list-box .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 40rpx;
  display: flex;
  justify-content: center;
}
.index-master-list-box .dots .dot{
  margin: 0 4rpx;
  width: 14rpx;
  height: 14rpx;
  background: #999999;
  border-radius: 50%;
  transition: all .5s;
}
.index-master-list-box .dots .dot.active{
  width: 68rpx;
  border-radius: 8rpx;
  background: #999999;
}




/* 鼓校专区 */
.index-school-list-box{
  background: #ffffff;
  padding-top: 24rpx;
}
.index-school-list-box .wrap{
  overflow: hidden;
}
.index-school-list{
  width: 336rpx;
  float: left;
}
.index-school-list:nth-child(1),.index-school-list:nth-child(3){
  margin-right: 28rpx;
}
.index-school-list-pic{
  width: 336rpx;
  height: 190rpx;
  border-radius: 12rpx;
  overflow: hidden;
  vertical-align: middle;
}
.index-school-list-name-box{
  margin: 24rpx 0 28rpx;
  font-size: 32rpx;
}
.index-school-list-location-box{
  margin-bottom: 40rpx;
}
.index-school-list-location-box image{
  width: 24rpx;
  height: 26rpx;
  float: right;
  margin-top: 6rpx;
  margin-right: 6rpx;
}
.index-school-list-location{
  color: #999999;
  font-size: 26rpx;
  display: inline-block;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.index-school-list-location-nav{
  color: #19c810;
  text-decoration: underline;
  float: right;
}


