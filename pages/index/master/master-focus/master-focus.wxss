/* pages/index/master/master-focus/master-focus.wxss */

.master-focus-top,.master-focus-list{
  background: #ffffff;
  margin-top: 24rpx;
  position: relative;
  height: 148rpx;
  overflow: hidden;
}
.master-tx-wrap{
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-top: 24rpx;
  margin-left: 24rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 16rpx rgba(42, 26, 5, 0.2);
}
.master-tx-wrap image{
  position: absolute;
  width: 94rpx;
  height: 94rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  overflow: hidden;
}
.master-name{
  position: absolute;
  top: 30rpx;
  left: 148rpx;
  font-size: 32rpx;
}
.master-instru{
  position: absolute;
  bottom: 30rpx;
  left: 148rpx;
  font-size: 26rpx;
  color: #999999;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.master-attention{
  font-size: 26rpx;
  color: #19c810;
  border: 1px solid #19c810;
  border-radius: 12rpx;
  width: 116rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.focus{
  color: #999;
  border: 1px solid #999;
}



.master-focus-list-sum{
  color: #999999;
  font-size: 26rpx;
  padding: 14rpx 24rpx;
}
.master-focus-list{
  height: 120rpx;
  margin-top: 0;
}
.master-focus-list .master-tx-wrap{
  margin-top: 10rpx;
  box-shadow: none;
}
.master-focus-list .master-name{
  top: 20rpx;
}
.master-focus-list .master-instru{
  bottom: 20rpx;
}
.line{
  width: 602rpx;
  height: 2rpx;
  background: #e9e9e9;
  position: absolute;
  bottom: 0;
  right: 0;
}