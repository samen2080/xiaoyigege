/* pages/index/master/master-home/master-home.wxss */
@import "../../../mine/mine-subject/mine-subject.wxss";

.master-home-top{
  background: #ffffff;
  margin-bottom: 24rpx;
}
.master-home-top-info{
  border-bottom: 2rpx solid #e9e9e9;
  text-align: center;
  position: relative;
}
.master-home-top-info-tx{
  padding: 40rpx 0 24rpx;
}
.master-home-focus{
  width: 74rpx;
  height: 74rpx;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}
.master-home-top-info-tx-wrap{
  width: 136rpx;
  height: 136rpx;
  box-shadow: 0 0 2rpx #2a1a05;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  margin: 0 76rpx;
}
.master-home-top-info-tx-wrap image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 4rpx;
}
.master-home-name{
  font-size: 32rpx;
  font-weight: 500;
}
.master-home-instru{
  color: #999999;
  font-size: 26rpx;
  margin: 20rpx 0 38rpx;
}
.master-home-top-social{
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
}
.master-home-top-social view{
  flex: 1;
  text-align: center;
  font-weight: 500;
}
.master-home-top-social view text{
  color: #19c810;
  margin-left: 20rpx;
}





.swiper-tab{
  width: 100%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background-color: #FFFFFF;
  /* position: fixed;
  top: 0;
  z-index: 1; */
  border-bottom: 1px solid #e9e9e9;
}
.swiper-tab-item{
  width: 100%; 
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
}
.swiper-tab-item:first-child{  
  margin-left: 0%;
}
.swiper-tab-item:nth-child(2){
  margin-right: 50%;
}
.active{
  color:#19c810;
}
.border-bottom{
  width: 28rpx;
  height: 6rpx;
  background: #19c810;
  border-radius: 10rpx;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.master-home-intro{
  font-size: 32rpx;
  line-height: 60rpx;
  color: #999999;
  padding: 32rpx 24rpx 100rpx;
  background: #ffffff;
}
.master-home-intro image{
  margin: 48rpx 0;
  vertical-align: middle;
  width: 100%;
  height: 418rpx;
}
