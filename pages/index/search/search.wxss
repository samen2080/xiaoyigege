/* pages/index/search/search.wxss */
@import '../../mine/publish/publish.wxss';
@import "../../mine/mine-subject/mine-subject.wxss";

/* 搜索框 */
.index-search-box .wrap{
  position: relative;
}
.index-search-box{
  width: 100%;
  position: fixed;
  top: 0;
  background: #ffffff;
  height: 86rpx;
  z-index: 999
}
.index-search{
  width: 620rpx;
  height: 58rpx;
  background: #e9e9e9;
  border-radius: 29rpx;
  margin-top: 14rpx;
}
.index-search image{
  width: 34rpx;
  height: 34rpx;
  margin: 12rpx 24rpx;
}
.index-search input{
  width: 518rpx;
  height: 58rpx;
  line-height: 58rpx;
  float: right;
  margin-right: 20rpx;
}
.search-placeholder{
  color: #999999;
}
.cancel-btn{
  font-size: 32rpx;
  position: absolute;
  right: 0;
  top: 10rpx;
}

.swiper-tab{
  top: 86rpx;
  border-top: none;
  border-bottom: 2rpx solid #e9e9e9;
}
.swiper-tab-item{
  width: 20%;
}
.swiper-tab-item:first-child {
  margin-left:20%;
}
.swiper-tab-item:nth-child(2) {
  margin-right:0;
}
.swiper-tab-item:nth-child(3) {
  margin-right:20%;
}


/* 无结果 */
.search-none image{
  width: 266rpx;
  height: 193rpx;
  margin: 120rpx 0 40rpx 242rpx;
}
.search-none-title{
  color: #999999;
  text-align: center;
}



/* 用户列表 */
swiper{
  margin-top: 168rpx;
  text-align: left;
  min-height:calc(100vh - 172rpx);
}
swiper-item:first-child,swiper-item:nth-child(2){
  background: #ffffff;
}
.user-list{
  position: relative;
}
.user-list image{
  width: 104rpx;
  height: 104rpx;
  margin: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-name{
  font-size: 32rpx;
  position: absolute;
  top: 30rpx;
  left: 174rpx;
}
.user-intro{
  font-size: 26rpx;
  position: absolute;
  bottom: 36rpx;
  left: 174rpx;
  color: #999999;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.line{
  position: absolute;
  bottom: 0;
  left: 174rpx;
  height: 2rpx;
  background: #e9e9e9;
  width: 576rpx;
}



/* 话题列表 */
.sub-list{
  position: relative;
  border-bottom: 2rpx solid #e9e9e9;
}
.sub-list image{
  width: 138rpx;
  height: 138rpx;
  margin: 24rpx;
}
.sub-name{
  font-size: 32rpx;
  position: absolute;
  top: 40rpx;
  left: 186rpx;
}
.sub-intro{
  font-size: 26rpx;
  position: absolute;
  bottom: 50rpx;
  left: 186rpx;
  color: #999999;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.sub-intro text{
  margin-right: 24rpx;
}