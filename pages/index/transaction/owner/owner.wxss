/* pages/index/transaction/owner/owner.wxss */

@import "../transaction.wxss";

page{
  padding-bottom: 0;
}
.owner-top{
  height: 228rpx;
  background: #ffffff;
  position: relative;
}
.owner-top image{
  width: 134rpx;
  height: 134rpx;
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.owner-name{
  font-size: 36rpx;
  position: absolute;
  left: 182rpx;
  top: 66rpx;
}
.owner-sum{
  font-size: 26rpx;
  color: #999999;
  position: absolute;
  left: 182rpx;
  bottom: 66rpx;
}
.owner-attention{
  font-size: 26rpx;
  color: #19c810;
  border: 1px solid #19c810;
  border-radius: 12rpx;
  width: 116rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.focus{
  color: #999;
  border: 1px solid #999;
}


.owner-product{
  margin-top: 24rpx;
  background: #ffffff;
}
.owner-product-title-box{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom:2rpx solid #e9e9e9;
  padding-left: 24rpx;
}

.owner-product-list{
  background: #ffffff;
  overflow: hidden;
  padding-bottom: 100rpx;
}