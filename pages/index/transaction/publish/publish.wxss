/* pages/index/transaction/publish/publish.wxss */
page{
  padding-bottom: 120rpx;
}
.pro-name{
  height: 100rpx;
  line-height: 100rpx;
  background: #ffffff;
  padding: 0 24rpx;
  font-size: 32rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.pro-intro{
  width: 702rpx;
  height: 250rpx;
  line-height: 48rpx;
  background: #ffffff;
  padding: 24rpx;
}
.pro-pic{
  width: 702rpx;
  background: #ffffff;
  padding: 24rpx;
}
.pro-pic image{
  width: 226rpx;
  height: 226rpx;
  margin: 0 12rpx 4rpx 0;
}
.pro-pic image:nth-child(3),.pro-pic image:nth-child(6),.pro-pic image:nth-child(9){
  margin: 0 0 4rpx 0;
}
.pro-new,.pro-cat{
  background: #ffffff;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 24rpx;
  margin: 24rpx 0;
  font-size: 32rpx;
  color: #999999;
}
.pro-new-select{
  width: 270rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #f5f5f5;
  float: right;
  border-radius: 12rpx;
  margin-top: 16rpx;
  overflow: hidden;
  text-align: center;
}
.pro-new-select-new{
  width: 50%;
  float: left;
  border-radius: 12rpx;
  overflow: hidden;  
}
.active{
  background: #19c810;
  color: #ffffff;
}
.pro-cat image{
  width: 17rpx;
  height: 31rpx;
  float: right;
  margin-top: 36rpx;
  margin-left: 24rpx;
}
.pro-cat text{
  float: right;
}


.pro-next-btn{
  width: 100%;
  height: 112rpx;
  line-height: 114rpx;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #e9e9e9;
}
.pro-next-btn button{
  width: 702rpx;
  height: 86rpx;
  line-height: 86rpx;
  background: #3ec51f;
  color: #ffffff;
  margin-top: 13rpx;
}





/* 分类 */
.pro-cat-box{
  width: 100%;
  height: 100%;
  background: #ffffff;
  font-size: 32rpx;
  position: fixed;
  top: 0;
  z-index: 999;
  border-top: 2rpx solid #e9e9e9;
}
.pro-cat-box view{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #e9e9e9;
}