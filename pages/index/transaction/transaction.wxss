/* pages/index/transaction/transaction.wxss */
@import "../index.wxss";

.index-search button{
  display: inline-block;
  height:100%;
}
.nav {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  white-space: nowrap;
  position: fixed;
  top: 86rpx;
  left: 0;
  z-index: 99;
  border-bottom: 2rpx solid #e9e9e9;
}
.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
  position: relative;
}
.nav-item.active{
  color: #19c810;
}
.border-bottom{
  width: 28rpx;
  height: 6rpx;
  background: #19c810;
  border-radius: 10rpx;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.tab-box{
  background: #ffffff;
  margin-top: 202rpx;
  box-sizing: border-box;
}



/* 按钮 */
.info-edit-form-btn{
  width: 100%;
  height: 114rpx;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  border-top: 2rpx solid #e9e9e9;
}
.info-edit-form-sub-btn{
  width: 702rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: #3ec51f;
  color: #ffffff;
  font-size: 36rpx;
  margin-top: 15rpx;
  letter-spacing: 1px;
}