/* pages/message/message.wxss */
page{
  border-top: 2rpx solid #e9e9e9;
}
.swiper-tab{
    width: 100%;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    background-color: #FFFFFF;
    position: fixed;
    top: 0;
    z-index: 9999;
    border-top: 1px solid #e9e9e9;
    border-bottom: 1px solid #e9e9e9;
}
.swiper-tab-item{
    width: 25%; 
    font-size: 32rpx;
    font-weight: bold;
    position: relative;
}
.swiper-tab-item:first-child{  
    margin-left: 25%;
}
.swiper-tab-item:nth-child(2){
    margin-right: 25%;
}
.active{
    color:#19c810;
}
.border-bottom{
  width: 28rpx;
  height: 6rpx;
  background: #19c810;
  border-radius: 10rpx;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
swiper{
  text-align: center;
  margin-top: 84rpx;
}



/* 列表 */
.message-list,.inform-list{
  width: 100%;
  background: #FFFFFF;
}
.message-list-list{
  width: 100%;
  height: 130rpx;
}
.message-list-list image{
  width: 90rpx;
  height: 90rpx;
  margin-top: 15rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  overflow: hidden;
  object-fit: cover;
  vertical-align: middle;
  float: left;
}
.message-list-right{
  height: 100%;
  overflow: hidden;
}
.message-list-title{
  font-size: 32rpx;
  float: left;
  margin-top: 20rpx;
  width: 440rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.message-list-time{
  font-size: 24rpx;
  color: #999;
  margin-top: 42rpx;
  float: right;
}
.message-list-content{  
  color: #999;
  width: 560rpx;
  float: left;
  margin-top: -69rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.line{
  width: 614rpx;
  height: 2rpx;
  background: #e9e9e9;
  margin-left: 138rpx;
}


.touch-item {
 font-size: 14px;
 display: flex;
 justify-content: space-between;
 border-bottom:1px solid #ccc;
 width: 100%;
 overflow: hidden
}
.content {
 width: 100%;
 padding: 10px;
 line-height: 22px;
 margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 margin-left: -90px
}
.del {
 background-color: orangered;
 width: 90px;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: #fff;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}