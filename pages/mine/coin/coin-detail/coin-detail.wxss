/* pages/mine/coin/coin-detail/coin-detail.wxss */
.coin-detail-list{
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  border-bottom: 2rpx solid #e9e9e9;
}
.wrap{
  overflow: hidden;
}
.coin-detail-list:first-child{
  margin-top: 24rpx;
}
.coin-detail-list-title{
  font-size: 32rpx;
  width: 560rpx;
  float: left;
  margin: 10rpx 0 6rpx;
}
.coin-detail-list-time{
  font-size: 26rpx;
  color: #999999;
  width: 560rpx;
  float: left;
}
.coin-detail-list-number{
  font-size: 32rpx;
  font-weight: bold;
  float: right;
  margin-top: -30rpx;
  margin-right: 24rpx;
  color: #19c810;
}
.gray{
  color: #999999;
}