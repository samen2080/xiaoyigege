/* pages/mine/collect/collect.wxss */
.overflow{
  overflow: hidden;
  padding-bottom: 24rpx;
}
/* 公用 */
.mine-collect-price{
  width: 134rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: rgba(255, 114, 28, 0.8);
  color: #ffffff;
  position: absolute;
  left: 0;
  bottom: 0;
  border-radius: 0 16rpx 0 0;
  font-size: 24rpx;
  text-align: center;
}
.mine-collect-name-wrap{
  height: 160rpx;
  padding: 0 16rpx 0;
  line-height: 48rpx;
  text-align: justify;
  border-bottom: 2rpx solid #e9e9e9;
  position: relative;
}
.mine-collect-name{
  font-size: 30rpx;
  display: -webkit-box; 
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
  width: 308rpx;
  margin: 6rpx 0 10rpx;
}
.mine-collect-time{
  color: #999999;
  width: 308rpx;
}
.mine-collect-owner-wrap{
  position: relative;
  height:74rpx;
}
.mine-collect-owner-wrap .mine-collect-owner-tx{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  vertical-align: text-bottom;
  border-radius: 50%;
  overflow: hidden;
}
.mine-collect-owner-name{
  font-size: 24rpx;
  position: absolute;
  left: 80rpx;
  top: 50%;
  transform: translateY(-50%);
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  max-width: 140rpx;
}
.mine-collect-sum image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.mine-collect-sum{  
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #444444;
}


/* 第一个 */
.mine-collect-list-1{
  width: 340rpx;
  height: 484rpx;
  background: #ffffff;
  border: 2rpx solid #e9e9e9;
  float: left;
  margin-left: 24rpx;
  margin-top: 20rpx;
  border-radius: 4rpx;
  overflow: hidden;
}
.mine-collect-list-1 .mine-collect-pic-wrap{
  width: 100%;
  height: 248rpx;
  position: relative;
}
.mine-collect-list-1 .mine-collect-pic{
  width: 100%;
  height: 100%;
