/* pages/mine/comment/comment.wxss */
.mine-comment-list{
  width: 100%;
  height: 200rpx;
  background: #ffffff;
  border-bottom: 1px solid #e9e9e9;
  border-top: 1px solid #e9e9e9;
  margin-bottom: 24rpx;
  position: relative;
}
.mine-comment-list image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.mine-comment-title{
  width: 520rpx;
  font-size: 32rpx;
  line-height: 52rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
  position: absolute;
  top: 30rpx;
}
.mine-comment-time{
  font-size: 24rpx;
  color: #999999;
  width: 520rpx;
  position: absolute;
  bottom: 35rpx;
}
