
/* 列表 */
.focus-list{
  width: 100%;
  background: #FFFFFF;
}
.focus-list-list{
  width: 100%;
  height: 120rpx;
  position: relative;
}
.focus-list-list image{
  width: 90rpx;
  height: 90rpx;
  margin-top: 15rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  overflow: hidden;
  object-fit: cover;
  vertical-align: middle;
  float: left;
}
.focus-list-right{
  height: 100%;
  overflow: hidden;
}
.focus-list-title{
  font-size: 32rpx;
  float: left;
  margin-top: 20rpx;
  width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.focus-bq{
  font-size: 26rpx;
  color: #999;
  border: 1px solid #999;
  border-radius: 12rpx;
  width: 116rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.focus-list-content{  
  color: #999;
  width: 420rpx;
  float: left;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.line{
  width: 614rpx;
  height: 2rpx;
  background: #e9e9e9;
  margin-left: 138rpx;
}