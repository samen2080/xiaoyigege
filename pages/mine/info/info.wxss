page{
  padding-bottom: 120rpx;
}

/* 头像 */
.info-edit-form-tx{
  width: 100%;
  background: #ffffff;
  text-align: center;
  border-top: 2rpx solid #e9e9e9;
  color: #999999;
  padding-bottom: 40rpx;
  margin-bottom: 24rpx;
}
#info-tx{
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
  margin: 50rpx 0 30rpx;
}



/* 编辑资料 */
.info-edit-form-modify{
  background: #ffffff;
  border-top: 2rpx solid #e9e9e9;
}
.info-edit-input{
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  border-bottom: 2rpx solid #e9e9e9;
  overflow: hidden;
}
.info-edit-input:last-child{
  height: 200rpx;
  line-height: 1.5;
  padding: 28rpx 0;
}
.info-edit-input text{
  font-size: 32rpx;
  margin-left: 24rpx;
}
.info-edit-input input{
  width: 580rpx;
  height: 100%;
  min-height: 100%;
  line-height: 100%;
  font-size: 32rpx;
  margin-right: 24rpx;
  float: right;
}
.placeholder{
  color: #999999;
}
.info-edit-input textarea{
  width: 580rpx;
  height: 100%;
  font-size: 32rpx;
  margin-right: 30rpx;
  float: right;
  margin-top: -12rpx;
}
.info-edit-input .section{
  width: 580rpx;
  height: 100%;
  font-size: 32rpx;
  margin-right: 24rpx;
  float: right;
}
.gender-select{
  display: inline-block;
  font-size: 32rpx;
}
.gender-select:nth-child(2){
  margin-left: 60rpx;
  margin-right: 54rpx;
}
.gender-select image{
  width: 38rpx;
  height: 38rpx;
  vertical-align: text-bottom;
  margin-right: 24rpx;
}



/* 保存按钮 */
.info-edit-form-btn{
  width: 100%;
  height: 114rpx;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  border-top: 2rpx solid #e9e9e9;
}
.info-edit-form-sub-btn{
  width: 702rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: #3ec51f;
  color: #ffffff;
  font-size: 36rpx;
  margin-top: 15rpx;
  letter-spacing: 1px;
}