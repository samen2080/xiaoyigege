<view class='info-edit-page'>
  <form id='info-edit-form' bindsubmit="formSubmit" bindreset="formReset">
   
    <view class='info-edit-form-modify'>
     
      <view class='info-edit-input'>
        <text>日 期:</text>
        <view class="section">  
          <picker mode="date" value="{{mnt_exe_date}}" bindchange="bindDateChange">  
            <view class="picker" style='color:{{dateColor}}'>{{mnt_exe_date}}</view>  
          </picker>  
        </view> 
      </view>

     
      <view class='info-edit-input'><text>电 话：</text><input type='text' placeholder='请输入电话' placeholder-class="placeholder" value='{{mnt_user_mobile}}' name='mnt_user_mobile'></input></view>
        <!-- 20200118 start -->
      <!-- <view class='info-edit-input' wx:if='{{user_identity == 2}}'><text>状 态：</text><input type='text'  placeholder-class="placeholder" value='{{mnt_status}}' name='mnt_status'></input></view>    -->
     <!-- 20200202 添加新选择器start -->
     <view class='info-edit-input' wx:if='{{user_identity == 2}}'><text>保养状态：</text>
      <Select prop-array='{{selectArray}}' bind:myget='getData' data-id='{{id}}' data-mntStatus='{{mntStatus}}'></Select></view>
