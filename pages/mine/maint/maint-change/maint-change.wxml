                </view>
            </view>
      </view> -->
     <!-- 20200202 添加新选择器end -->
      <view class='info-edit-input' wx:if='{{user_identity == 2}}'><text>ID：</text><input type='text' placeholder='请输入保养员id' placeholder-class="placeholder" name='mnt_maint_id'></input></view>   
       
      <view class='info-edit-input'><text>区域：</text><input placeholder="选择" value="{{mnt_user_province}}-{{mnt_user_city}}-{{mnt_user_county}}" focus="{{focus}}" bindfocus="open" /></view>
      <view class='info-edit-input'><text>地址：</text><input type='text' placeholder='请输入地址' placeholder-class="placeholder" value='{{mnt_user_address}}' name='mnt_user_address'></input></view>      
      
          <!-- 20200118 end -->
      
           
       <!-- 20200118 start -->
    <view wx:if="{{condition}}" class="citypicker">
       <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" class="citybody">
    <view class="cityheader">
      <view bindtap="open" class="city-cancel">取消</view>
      <view bindtap="open" class="city-true">确定</view>
    </view>
    <picker-view-column>
      <view wx:for="{{provinces}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{countys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    </picker-view>
    </view>
            <!-- 20200118 end -->
    </view>
    <view class='info-edit-form-btn'>
      <button formType="submit" class='info-edit-form-sub-btn'>
        <text class='btn-text'>更新</text>
      </button>
    </view>

  </form>
</view>

