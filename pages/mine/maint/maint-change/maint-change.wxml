                <view class="flex-grow-1" style="text-align: right;">
                    <picker bindchange="bindStatusChange" mode="selector" name="picker" range="{{array}}" value="{{index}}">
                        <view class="weui-select weui-select_in-select-after">状态： {{array[index]}}/view>
                    </picker>
                </view>
