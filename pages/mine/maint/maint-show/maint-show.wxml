<view class='contract-show-middle'>
  <view class='contract-show-middle-title'>联系人信息</view>

  <view class='contract-show-middle-info-box'>
    <view class='contract-show-middle-info-list'>用户ID：<text>{{items.mnt_user_id}}</text></view>
    <view class='contract-show-middle-info-list'>用户电话：<text>{{items.mnt_user_mobile}}</text></view>
    <view class='contract-show-middle-info-list2'>用户地址：<text>{{items.mnt_user_province}}{{items.mnt_user_city}}{{items.mnt_user_county}}{{items.mnt_user_address}}</text></view>
  </view>
</view>

<view class='contract-show-bottom'>
 
 <view class='contract-show-middle-title'>保养相关</view>
<view class='contract-show-middle-info-box2'>
  
    <view class='on-list-number-wrap-top'>
    <text class='on-list-number-top'>保养状态：{{items.mnt_status==0?"未执行":items.mnt_status==1?"提前已执行":items.mnt_status==2?"按时已执行":items.mnt_status==3?"延时已执行":items.mnt_status==4?"临时已执行":"提交已接单"}}</text>
