    </view>
    <view class='contract-show-bottom-list'>保养公司：<text>{{items.mnt_maint_com}}</text></view>
    <view class='contract-show-bottom-list'>保养员电话：<text>{{items.mnt_maint_mobile}}</text></view>
    <view class='contract-show-bottom-list3'>保养中心：<text>{{items.mnt_maint_province}}{{items.mnt_maint_city}}{{items.mnt_maint_county}}{{items.mnt_maint_address}}</text></view>
    <view class='contract-show-bottom-list'>保养星级：<text>{{items.mnt_rating_grade}}</text></view>
    <view class='contract-show-bottom-list4'>保养评价：<textarea maxlength='200'>{{items.mnt_rating_comment}}</textarea></view>
  
   


  </view>
  

</view>



