/* pages/mine/product-show/product-show.wxss */
page{
  padding-bottom: 216rpx;
}
.product-show-top{
  background: #ffffff;
  margin-bottom: 24rpx;
}
.swiper-container{
  text-align: center;
  width: 750rpx;
  position: relative;
  height: 750rpx;
  margin-bottom: 40rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.product-show-name{
  font-size: 36rpx;
  margin:0 24rpx;
}
.product-show-info{
  line-height: 48rpx;
  color: #999999;
  margin:30rpx 24rpx 30rpx;
}
.product-show-price{
  color: #ff721c;
  margin:0 24rpx;
  font-size: 36rpx;
}
.product-show-time{
  color: #19c810;
  margin:0 24rpx;
  font-size: 36rpx;
}
.product-show-owner-info{
  width: 750rpx;
  margin-top: 20rpx;
  height: 120rpx;
  border-top: 2rpx solid #e9e9e9;
  position: relative;
}
.product-show-owner-info image{
  width: 82rpx;
  height: 82rpx;
  margin: 19rpx 0 19rpx 24rpx;
  vertical-align: middle;
  border-radius: 50%;
  overflow: hidden;
}
.product-show-owner-name{
  width: 350rpx;
  font-size: 36rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 120rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.product-show-owner-address{
  color: #19c810;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 24rpx;
}



/* 留言 */
.product-show-message-box{
  background: #ffffff;
  margin-bottom: 24rpx;
}
.product-show-message-box-title{
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 0 24rpx;
}
.product-show-leave-message{
  padding-top: 30rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 60rpx;
}
.product-show-leave-message image{
  width: 70rpx;
  height: 70rpx;
  margin-left: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}
.product-show-leave-message input{
  width: 442rpx;
  height: 66rpx;
  margin-left: 24rpx;
  float: right;
  margin-right: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
  padding: 0 140rpx 0 24rpx;
}
.leave-message{
  font-size: 28rpx;
  color: #999999;
}
.product-show-leave-message-btn{
  width: 120rpx;
  height: 66rpx;
  line-height: 66rpx;
  background: #19c810;
  border-radius: 12rpx;
  overflow: hidden;
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  position: absolute;
  right: 24rpx;
  top: 30rpx;
}
.product-show-message-list{
  overflow: hidden;
}
.product-show-message-list image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 24rpx;
  vertical-align: middle;
}
.product-show-message-name{
  font-size: 36rpx;
  margin-left: 16rpx;
}
.product-show-message-time{
  color: #999999;
  font-size: 24rpx;
  float: right;
  margin-top: 20rpx;
  margin-right: 24rpx;
}
.product-show-message-content{
  color: #999999;
  line-height: 48rpx;
  margin: 30rpx 24rpx 60rpx;
}
.message-more{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  border-top: 2rpx solid #e9e9e9;
}



/* 相关推荐 */
.product-show-recommend-list-box{
  padding: 24rpx 0;
}
.product-show-recommend-list-box .wrap{
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.product-show-recommend-list{
  width: 344rpx;
  height: 344rpx;
  /* float: left; */
  position: relative;
  margin-bottom: 14rpx;
}
/* .product-show-recommend-list:nth-child(2),.product-show-recommend-list:nth-child(4){
  float: right;
} */
.product-show-recommend-list-1{
  width: 344rpx;
  height: 344rpx;
  float: left;
  position: relative;
  margin-bottom: 14rpx;
}
.product-show-recommend-list-2{
  width: 344rpx;
  height: 344rpx;
  float: right;
  position: relative;
  margin-bottom: 14rpx;
}
.product-show-recommend-list-box image{
  width: 100%;
  height: 100%;
}
.product-show-recommend-list-price{
  width: 170rpx;
  height: 56rpx;
  line-height: 56rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 24rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 12rpx;
  text-align: center;
  color: #ff721c;
  font-size: 26rpx;
}

/* 底部按钮 */
.product-show-nav{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #ffffff;
  z-index: 2;
  border-top: 2rpx solid #e9e9e9;
}
.product-show-collect{
  width: 80rpx;
  height: 80rpx;
  margin-left: 24rpx;
  margin-top: 10rpx;
}
.product-show-share{
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx 10rpx 0;
  display: inline-block;
  border-radius: 0;
}
.product-show-share image{
  width: 80rpx;
  height: 80rpx;
}
.product-show-remove{
  background: #19c810;
  color: #ffffff;
  float: right;
  width: 512rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  margin-right: 24rpx;
  font-size: 36rpx;
}





/* 下架Toast */
.removeModal{
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.removeModal-box{
  width: 600rpx;
  height: 420rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 36rpx;
  text-align: center;
  overflow: hidden;
}
.removeModal-title{
  height: 318rpx;
  line-height: 318rpx;
}
.removeModal-cancel,.removeModal-sure{
  float: left;
  width: 50%;
  height: 102rpx;
  line-height: 102rpx;
}
.removeModal-cancel{
  background: #e9e9e9;
}
.removeModal-sure{
  background: #19c810;
  color: #FFFFFF;
}