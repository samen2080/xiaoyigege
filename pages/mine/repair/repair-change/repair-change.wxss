}



/* 保存按钮 */
.info-edit-form-btn{
  width: 100%;
  height: 114rpx;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  border-top: 2rpx solid #e9e9e9;
}
.info-edit-form-sub-btn{
  width: 702rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: #3ec51f;
  color: #ffffff;
  font-size: 36rpx;
  margin-top: 15rpx;
  letter-spacing: 1px;
}

.section {
  padding-top: 20rpx;
}
.info-edit-input .section{
  width: 580rpx;
  height: 100%;
