<!--pages/mine/worker/new-contract-page1/new-contract-page1.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class='contract-show-middle-title'>
    <text>联系人信息：</text>
  </view>
  <view class='input-wrap'>
    <text>户主姓名：</text>
    <input placeholder-class='placeholder' name='user_name'></input>
  </view>
  <view class='input-wrap'>
    <text>用户ID：</text>
    <input placeholder-class='placeholder' name='user_id'></input>
  </view>
  <!-- <view class='input-wrap'>
    <text>性别：</text>
    <input placeholder-class='placeholder' name='user_sex'></input>
  </view> -->
  <view class='input-wrap' catchtap='genderSelect' >
        <text>性别：</text>
        <view class='gender-select'><image src='{{id==0?"/images/male.png":"/images/circle.png"}}' data-id='0'></image>男</view>
        <view class='gender-select'><image src='{{id==1?"/images/female.png":"/images/circle.png"}}' data-id='1'></image>女</view>
  </view>
  <view class='input-wrap'>
    <text>身份证号：</text>
    <input placeholder-class='placeholder' name='user_city_id'></input>
  </view>
  <view class='input-wrap'>
    <text>联系电话：</text>
    <input placeholder-class='placeholder' name='user_mobile'></input>
  </view>

<!-- 2020/1/21 start -->
  <view class='input-wrap'>
    <view>区域：<input placeholder="选择" value="{{con_user_province}}-{{con_user_city}}-{{con_user_county}}" focus="{{focus}}" bindfocus="open" /></view>

    <view class="citypicker" hidden='{{condition}}'>
      <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" class="citybody">
        <view class="cityheader">
              <view bindtap="open" class="city-cancel">取消</view>
              <view bindtap="open" class="city-true">确定</view>
        </view>
        <picker-view-column>
          <view wx:for="{{provinces}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{citys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{countys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
        </picker-view-column>
      </picker-view>
    </view>
</view>
<!-- 2020/1/21 end -->


    <view class='input-wrap'>
      <text>详细地址：</text>
      <input placeholder-class='placeholder' name='user_address'></input>
    </view>
    
    <view class='btn-wrap' wx:if='{{condition == 1}}'>
      <button class='next-btn' form-type='submit'>下一步</button>
    </view>


    <view class='upload-wrap'>    
       <image src='{{host}}{{address_img}}' mode='aspectFill'></image>
       <image src='/images/fabu1.png' class='upload-btn' mode='aspectFill' catchtap='uploadpic' hidden='{{upHidden}}'></image>
  </view>
</form>


