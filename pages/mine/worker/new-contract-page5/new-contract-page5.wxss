.drawer_title {
    padding: 30rpx;
    font: 30rpx "microsoft yahei";
    font-weight: bold;
    text-align: center;
    color: #333;
    background: #F2F2F2;
}

.weui-cell {
    font-size: 28rpx;
    margin-top: 20rpx;
}

.zfimg {
    width: 50rpx;
    height: 45rpx;
    margin-right: 20rpx;
}

.zfimg image {
    width: 100%;
    height: 100%;
}
.weui-cell__bd {
    -webkit-box-flex: 1;
    flex: 1;
}

.weui-cell__ft {
    text-align: right;
    color: #999;
}
.weui-cell {
    padding: 10px 15px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.drawer_title1 {
    border-top: 0.5px solid #e6e6e6;
    padding: 20rpx;
    font: 27rpx "microsoft yahei";
    text-align: center;
    color: #999;
}
.zftext {
    font-size: 40rpx;
    margin-left: 20rpx;
}

.btn_ok1 {
    padding: 25rpx;
    font: 30rpx "microsoft yahei";
    text-align: center;
    background: linear-gradient(to bottom right,#00CD66,#1aad19);
    color: #fff;
    border-radius: 0;
}
