/* pages/start/start.wxss */
.general-layout{
width: 100%;
height:100%;
position: fixed;
}

.background-img {
  width: 100%;
  height: 100%;
  position:absolute; 
  background-size:100% 100%;
  z-index: -1;
}

button{
  position: fixed;
  bottom: 122rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 260rpx;
  height: 90rpx;
  line-height: 78rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 800;
  letter-spacing: 4rpx;
  background-color: #dde8f1;
  border: #8ac1db solid 3px; 
  color: #4d8fc3;
}

.start-image{
  position: fixed;
  width:100%;
  height: 100%;
  opacity: 0.8;
  filter: alpha(opacity=50); /* For IE8 and earlier */
}

page {
  background:rgb(184,196,214);
} 